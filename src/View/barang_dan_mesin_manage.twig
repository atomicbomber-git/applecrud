{% extends 'display_manage.twig' %}

{% block nama_kartu %}
	Kartu Inventaris Barang: B. Peralatan dan Mesin
{% endblock %}

{% block table_header %}
	<tr>
		<th rowspan="2"> Kendali </th>		
		<th rowspan="2">Kode Barang</th>		
		<th rowspan="2">Nama Barang / Jenis Barang</th>		
		<th rowspan="2">Nomor Register</th>		
		<th rowspan="2">Merek / Type</th>		
		<th rowspan="2">Ukuran / CC</th>		
		<th rowspan="2">Bahan</th>		
		<th rowspan="2">Tahun Catat/Beli</th>		
		<th colspan="5">Nomor</th>		
		<th rowspan="2">Asal-Usul</th>		
		<th rowspan="2">Masa Manfaat</th>		
		<th rowspan="2">Sisa Umur</th>		
		<th rowspan="2">Nilai Perolehan</th>		
		<th rowspan="2">Jumlah Penyusutan</th>		
		<th rowspan="2">Nilai Buku</th>		
		<th rowspan="2">%</th>		
		<th rowspan="2">Kondisi Barang</th>		
		<th rowspan="2">Keterangan</th>		
	</tr>

	<tr>
		<th> Pabrik </th>
		<th> Rangka </th>
		<th> Mesin </th>
		<th> Polisi </th>
		<th> BPKB </th>
	</tr>

	<tr>
		<th> * </th>
		<th> 2 </th>
		<th> 3 </th>
		<th> 4 </th>
		<th> 5 </th>
