{% extends 'add_edit.twig' %}

{% block title %} Sunting Peralatan dan Mesin {% endblock %}
{% block legend %} Sunting Peralatan dan Mesin {% endblock %}

{% block form %}
	<form method='POST' action="{{ base_url() }}/barang_dan_mesin/edit/{{ data.no }}">
			<table>
				<tr> <td> <label> Kode Barang: </label> </td>
