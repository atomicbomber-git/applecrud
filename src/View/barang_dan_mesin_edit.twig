				<tr style="text-align: right"> 
					<td colspan="2">
						<a class='btn btn-danger' href='{{ base_url() }}/barang_dan_mesin/display_manage'> Kembali </a>
						<input class='btn btn-primary' type='submit' value="Setujui Perubahan">
					</td>
				</tr>
			</table>
		</form>
{% endblock %}