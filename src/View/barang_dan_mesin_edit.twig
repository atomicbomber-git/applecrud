				<td> <input value='{{ data.bahan }}' type='text'  name='bahan'> </td> </tr>

				<tr> <td> <label> Tahun Catat / Beli: </label> </td>
				<td> <input value='{{ data.tahun }}' type='number'  name='tahun'> </td> </tr>

				<tr> <td> <label> Nomor Pabrik: </label> </td>
				<td> <input value='{{ data.pabrik }}' type='text'  name='pabrik'> </td> </tr>

