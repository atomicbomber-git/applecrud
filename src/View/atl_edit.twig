			<tr>
				<td> <label> Kode Barang: </label> </td>
				<td> <input type='text'  value='{{data.kode}}'name='kode'> </td>
			</tr>

			<tr>
				<td> <label> Register: </label> </td>
				<td> <input type='text'  value='{{data.register}}'name='register'> </td>
			</tr>

			<tr>
				<td> <label> Judul / Pencipta: </label> </td>
				<td> <input type='text'  value='{{data.judul}}'name='judul'> </td>
			</tr>

			<tr>
				<td> <label> Spesifikasi: </label> </td>
				<td> <input type='text'  value='{{data.spesifikasi}}'name='spesifikasi'> </td>
			</tr>

			<tr>
				<td> <label> Asal Daerah: </label> </td>
				<td> <input type='text'  value='{{data.asal_daerah}}'name='asal_daerah'> </td>
			</tr>

			<tr>
				<td> <label> Pencipta: </label> </td>
